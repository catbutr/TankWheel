<Window x:Class="TankWheel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankWheel"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="990.247">
    <Grid Margin="0,0,-67,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="submitButton" Content="Принять" HorizontalAlignment="Left" Height="50" Margin="410,389,0,0" VerticalAlignment="Top" Width="200" RenderTransformOrigin="0.638,-0.77" FontSize="14"/>
        <TextBox x:Name="W1_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="242,93,0,0" RenderTransformOrigin="1.048,0.407" Text="{Binding W1_Validation, 
                ValidatesOnExceptions=True,
                UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Толщина основания соединения " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="227" FontSize="14"/>
        <TextBox x:Name="W2_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="242,140,0,0" RenderTransformOrigin="1.048,0.407"  Text="{Binding W2_Validation, 
                ValidatesOnExceptions=True,
                UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Толщина крышки диска " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,137,0,0" Width="227" FontSize="14"/>
        <TextBox x:Name="W3_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="242,190,0,0" RenderTransformOrigin="1.048,0.407" Text="{Binding W3_Validation, 
                ValidatesOnExceptions=True,
                UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="TextBox_PreviewTextInput" IsEnabled="False"/>
        <Label Content="Толщина обода катка " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,187,0,0" Width="227" FontSize="14"/>
        <TextBox x:Name="W4_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="242,240,0,0" RenderTransformOrigin="1.048,0.407" Text="{Binding W4_Validation, 
                ValidatesOnExceptions=True,
                UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="TextBox_PreviewTextInput" IsEnabled="False"/>
        <Label Content="Длина внутренних стенок" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,237,0,0" Width="227" FontSize="14"/>
        <TextBox x:Name="D1_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="242,292,0,0" RenderTransformOrigin="1.048,0.407" Text="{Binding D1_Validation, 
                ValidatesOnExceptions=True,
                UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Диаметр катка вместе с ободом " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,289,0,0" Width="227" FontSize="14"/>
        <Image HorizontalAlignment="Left" Height="175" Margin="596,190,0,0" VerticalAlignment="Top" Width="236" Source="TankWheel.png"/>
        <TextBox x:Name="D2_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="242,339,0,0" RenderTransformOrigin="1.048,0.407" Text="{Binding D2_Validation, 
                ValidatesOnExceptions=True,
                UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Диаметр основания соединения" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,336,0,0" Width="227" FontSize="14"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" TextWrapping="Wrap" Text="ОПОРНЫЙ КАТОК ТАНКА Т-80" VerticalAlignment="Top" Width="822" FontSize="36"/>
        <Label Content="Количество отверстий на основании соединения" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="447,90,0,0" Width="341" FontSize="14"/>
        <Label Content="Количество отверстий на крышке " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="447,137,0,0" Width="341" FontSize="14"/>
        <TextBox x:Name="N1_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="788,93,0,0" RenderTransformOrigin="1.048,0.407" Text="{Binding N1_Validation, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}" PreviewTextInput="TextBox_PreviewTextInput"/>
        <TextBox x:Name="N2_TextBox" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Margin="788,140,0,0" RenderTransformOrigin="1.048,0.407" Text="{Binding N2_Validation, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}" PreviewTextInput="TextBox_PreviewTextInput"/>

    </Grid>
</Window>
